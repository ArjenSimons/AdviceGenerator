<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/transparent"
    android:clipToPadding="false">


    <View
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvsSubtext"
        app:layout_constraintStart_toStartOf="@+id/tvsSubtext"
        app:layout_constraintTop_toTopOf="@+id/tvHeader" />

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Rating"
        android:textColor="@android:color/black"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        android:background="#DDD9D9"
        android:elevation="1dp"
        android:fadingEdge="vertical"
        app:layout_constraintEnd_toEndOf="@id/tvsSubtext"
        app:layout_constraintStart_toStartOf="@id/tvsSubtext"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader" />

    <TextView
        android:id="@+id/tvsSubtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:text="Give this advice a rating from 1 to 5"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        tools:layout_marginTop="20dp" />


    <Button
        android:id="@+id/btnOne"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="34dp"
        android:layout_height="44dp"
        android:layout_below="@+id/tvsSubtext"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/white"
        android:paddingBottom="10dp"
        android:text="1"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvsSubtext"
        app:layout_constraintTop_toBottomOf="@+id/tvsSubtext"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnRight"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="34dp"
        android:layout_height="44dp"
        android:layout_below="@+id/tvsSubtext"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:paddingBottom="10dp"
        android:text="2"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnOne"
        app:layout_constraintTop_toBottomOf="@+id/tvsSubtext" />

    <Button
        android:id="@+id/btnRight2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="34dp"
        android:layout_height="44dp"
        android:layout_below="@+id/tvsSubtext"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:paddingBottom="10dp"
        android:text="3"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnRight"
        app:layout_constraintTop_toBottomOf="@+id/tvsSubtext" />

    <Button
        android:id="@+id/btnRight3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="34dp"
        android:layout_height="44dp"
        android:layout_below="@+id/tvsSubtext"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:paddingBottom="10dp"
        android:text="4"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnRight2"
        app:layout_constraintTop_toBottomOf="@+id/tvsSubtext" />

    <Button
        android:id="@+id/btnRight4"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="34dp"
        android:layout_height="44dp"
        android:layout_below="@+id/tvsSubtext"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:paddingBottom="10dp"
        android:text="5"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnRight3"
        app:layout_constraintTop_toBottomOf="@+id/tvsSubtext" />

</androidx.constraintlayout.widget.ConstraintLayout>